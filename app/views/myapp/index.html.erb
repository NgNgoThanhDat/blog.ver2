<% provide(:title, "Home") %>
<div class="center jumbotron">
  <h1>Welcome to the Sample App</h1>

  <h2>
    This is the home page for the
    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
</h2>

<%= link_to "Sign up now!", '#', class: "btn btn-lg btn-primary" %>
</div>
<!-- Main Content -->
<%= link_to 'Create Blog', new_page_path %>
<div class="row">
	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <% @pages.each do |page| %>
        <div>						
            <h2><%= link_to(page.title, page) %></h2>
            <%= link_to "Edit", edit_page_path(page), class: "btn btn-md btn-primary" %>
            <p>Published <%= time_ago_in_words (page.published_at) %> ago</p>
        </div>
        <hr>
        <% end %>
    </div>
</div>