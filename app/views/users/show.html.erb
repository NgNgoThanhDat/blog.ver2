<% provide(:title, "ShowUser") %>
<!-- Main Content -->
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h5><%= gravatar_for @user %>
				<%= @user.name %></h5>
			</section>
			<section class="stats">
				<%= render 'shared/stats' %>
			</section>
		</aside>
		<div class="col-md-8 follow-show">
			<%= render 'follow_form' if logged_in? %>
			<% if @user.microposts.any? %>
			<h5>Posts (<%= @user.microposts.count %>)</h5>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
			<% end %>
		</div>
	</div> 